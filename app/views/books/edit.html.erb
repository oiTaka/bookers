
  <h1>Editing Book</h1>

  <% if @book.errors.any? %>
     <div class="errors">
         <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
         <ul>
           <% @book.errors.full_messages.each do |massage| %>
             <li><%= massage %></li>
           <% end %>
         </ul>
     </div>
   <% end %>

  <%=form_with model:@book, local:true do |f| %>
    <div class="field">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="area">
      <label for"book_body">Body</label>
      <%= f.text_area :body %>
    </div>
    <div class="action">
      <%= f.submit 'Update Book' %>
    </div>
  <% end %>
  <span><%= link_to 'Show', book_path(@book) %></span>|<span><%= link_to 'Back', books_path %></span>
