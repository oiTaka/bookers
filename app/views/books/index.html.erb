
   <p id="notice"><%= flash[:notice] %></p>
   <h1>Books</h1>
   <table>
     <thead>
       <tr>
         <th>Title</th>
         <th>body</th>
         <th colspan="3"></th>
       </tr>
     </thead>

     <tboy>
         <% @books.each do |book| %>
           <tr>
             <td><%= book.title %></td>
             <td><%= book.body %></td>
             <td><%= link_to 'Show', book %></td>
             <td><%= link_to 'Edit', edit_book_path(book) %></td>
             <td><%= link_to 'Destroy', book, method: :delete, data: {confirm: 'Are you sure?' } %></td>
           </tr>
         <% end %>
     </tboy>
   </table>

   <h2>New book</h2>

   <% if @book.errors.any? %>
     <div class="errors">
         <h2><%= @book.errors.count %> error prohibited this book from being saved:</h>
         <ul>
           <% @book.errors.full_messages.each do |massage| %>
             <li><%= massage %></li>
           <% end %>
         </ul>
     </div>
   <% end %>

   <%= form_with model:@book, local:true do |f| %>
     <div class="field">
       <label for="book_title">Title</label>
       <%= f.text_field :title %>
     </div>

     <div class="area">
       <label for="book_body">Body</label>
       <%= f.text_area :body %>
       </div>
     <%= f.submit 'Create Book' %>
   <% end %>